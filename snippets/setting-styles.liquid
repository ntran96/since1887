        font-family: {{ settings.heading_font_name }};
        src:  url("{{ settings.heading_font_name | append: '.ttf' | asset_url }}") format("ttf"),
              url("{{ settings.heading_font_name | append: '.otf' | asset_url }}") format("opentype"),
              url("{{ settings.heading_font_name | append: '.woff2' | asset_url }}") format("woff2"),
              url("{{ settings.heading_font_name | append: '.woff' | asset_url }}") format("woff");

      }
