{%- liquid
  assign global_font = settings.global_font

  assign global_font_lighter = global_font | font_modify: 'weight', 'lighter'
  assign global_font_medium = global_font | font_modify: 'weight', '500'
  assign global_font_bold = global_font | font_modify: 'weight', 'bold'
  assign global_font_italic = global_font | font_modify: 'style', 'italic'
  assign global_font_lighter_italic = global_font_lighter | font_modify: 'style', 'italic'
  assign global_font_medium_italic = global_font_medium | font_modify: 'style', 'italic'
  assign global_font_bold_italic = global_font_bold | font_modify: 'style', 'italic'

  if settings.text_font_type == 'shopify_fonts'
    assign body_font = settings.text_font

    assign body_font_lighter = body_font | font_modify: 'weight', 'lighter'
    assign body_font_medium = body_font | font_modify: 'weight', '500'
    assign body_font_bold = body_font | font_modify: 'weight', 'bold'
    assign body_font_italic = body_font | font_modify: 'style', 'italic'
