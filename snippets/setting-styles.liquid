    assign body_font_medium_italic = body_font_medium | font_modify: 'style', 'italic'
    assign body_font_bold_italic = body_font_bold | font_modify: 'style', 'italic'
  endif 


  if settings.heading_font_type == 'shopify_fonts'
    assign heading_font = settings.heading_font

    assign heading_font_medium = heading_font | font_modify: 'weight', '500'
    assign heading_font_bold = heading_font | font_modify: 'weight', 'bold'
    assign heading_font_italic = heading_font | font_modify: 'style', 'italic'
    assign heading_font_medium_italic = heading_font_medium | font_modify: 'style', 'italic'
    assign heading_font_bold_italic = heading_font_bold | font_modify: 'style', 'italic'
  endif 

  if settings.button_font_type == 'shopify_fonts'
    assign button_font = settings.button_font

    assign button_font_medium = button_font | font_modify: 'weight', '500'
    assign button_font_bold = button_font | font_modify: 'weight', 'bold'
    assign button_font_italic = button_font | font_modify: 'style', 'italic'
    assign button_font_medium_italic = button_font_medium | font_modify: 'style', 'italic'
    assign button_font_bold_italic = button_font_bold | font_modify: 'style', 'italic'
  endif 

  if settings.highlight_font_type == 'shopify_fonts'
    assign highlight_font = settings.highlight_font

    assign highlight_font_medium = highlight_font | font_modify: 'weight', '500'
    assign highlight_font_bold = highlight_font | font_modify: 'weight', 'bold'
    assign highlight_font_italic = highlight_font | font_modify: 'style', 'italic'
    assign highlight_font_medium_italic = highlight_font_medium | font_modify: 'style', 'italic'
    assign highlight_font_bold_italic = highlight_font_bold | font_modify: 'style', 'italic'
  endif 
