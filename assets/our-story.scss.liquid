$tablet-screen: 768px;
$desktop-screen: 1200px;

$color-primary-background: {{ settings.primary_background }};

.our-story {
  color: $color-primary-background;

  .our-story__heading {
    padding: 30px 20px;
    background: #010101;

    @media (min-width: $desktop-screen) {
      padding: 135px 150px;
    }

    .our-story__heading__title {
      color: inherit;
      text-align: center;
      font-size: 30px;
      margin: 0;

      @media (min-width: $desktop-screen) {
        font-size: var(--font-size-h3);
      }
    }
  }

  .timeline-item {
    position: relative;
    padding: 174px 20px;

    @media (min-width: $desktop-screen) {
      padding: 142px 50px;
    }

    .timeline-item__background {
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;

      &::after {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: #000;
      }

      img {
        width: 100%;
        height: 100%;
        object-fit: cover;
      }
    }

    .timeline-item__content {
      position: relative;

      @media (min-width: $desktop-screen) {
        width: 50%;
        max-width: 615px;
        margin: 0 auto;
      }

      .timeline-item__content__year {
        position: absolute;
        top: -114px;
        left: 50%;
        transform: translate(-50%, 0);
        font-size: 125px;
        font-family: var(--font-highlight-family);
        text-shadow: 0px 2px 6px rgba(0, 0, 0, 0.25);

        @media (min-width: $desktop-screen) {
          font-size: 213px;
          top: 50%;
          left: -255px;
          transform: translate(0, -50%);
        }
      }
      
      .timeline-item__content__image {
        width: 1005;
        line-height: 0;

        img {
          width: 100%;
        }
      }
      
      .timeline-item__content__description {
        margin: 30px 0 0;
        font-size: var(--font-size-small-text);
        
        @media (min-width: $desktop-screen) {
          position: absolute;
          top: 50%;
          left: 100%;
          transform: translateY(-50%);
          width: 330px;
          padding-left: 33px;
          margin: 0;
          font-size: var(--font-size-base);
        }
      }
    }
  }
}