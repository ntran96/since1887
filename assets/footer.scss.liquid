// Breakpoint
$tablet-screen: 768px;
$desktop-screen: 1024px;
$desktop-screen-large: 1440px;

// Theme setting
$color-primary-background: {{ settings.primary_background }};

// Follow design
$color-error: #D45757;
$color-success: #199B4D;
$color-grey: var(--grey);
$font-size-smaller-text: calc(var(--global-text-fs) - 6px);
$font-size-small-text: calc(var(--global-text-fs) - 2px);

.footer {
  font-family: var(--font-body-family);

  // Glenfiddich
  .footer-brand--glenfiddich {
    padding-top: 45px;
    display: none;

    @media (min-width: $tablet-screen) {
      padding-top: 90px;
    }

    &.show {
      display: block;
    }
  }

  // Monkey Shoulder
  .footer-brand--monkey {
    padding: 56px 0 72px;

    @media (min-width: $tablet-screen) {
      padding: 72px 0;
    } 
  }

  .ms-footer__top {
    position: relative;

    @media (min-width: $desktop-screen) {
      padding-bottom: 40px;
    } 
  }

  .ms-footer__logo {
    display: flex;
    flex-direction: column;
    align-items: center;
  }

  .ms-footer__social {
    padding: 32px 0;
    margin-top: 40px;
    border-top: 1px solid #FAAF4B;

    @media (min-width: $desktop-screen) {
      position: absolute;
      right: 0;
      bottom: 40px;
      text-align: right;
      border: none;
      padding: 0;
      margin: 0;
    } 

    .social-list {
      justify-content: center;
      margin: -8px -12px;

      @media (min-width: $desktop-screen) {
        justify-content: flex-end;
      } 

      .social-list__item {
        padding: 0 12px;
      }
    }

    .ms-footer__social__tags {
      margin-top: 16px;
      display: flex;
      justify-content: space-around;

      @media (min-width: $desktop-screen) {
        flex-direction: column;
        align-items: flex-end;
      } 
    }
  }

  .ms-footer__content {
    padding: 12px 0;
    border-bottom: 1px solid #FAAF4B;
    border-top: 1px solid #FAAF4B;
    text-align: center;

    @media (min-width: $desktop-screen) {
      padding: 24px 0;
    }
  }

  .ms-footer__menu {
    @media (min-width: $desktop-screen) {
      display: flex;
      flex-direction: row;
      flex-grow: 1;
      justify-content: center;
    } 

    li {
      margin-bottom: 16px;

      @media (min-width: $desktop-screen) {
        margin-bottom: 0;
        border-right: 1px solid #FAAF4B;
      }

      &:last-child {
        margin-bottom: 0;
        border-right: none;

        a {
          border: none;
        }
      }
    }

    a {
      text-decoration: none;
      text-transform: uppercase;
      font-weight: 500;
      // font-family: var(--font-button-family);

      @media (min-width: $desktop-screen) {
        display: inline-block;
        padding: 0 30px; 
        font-size: calc(var(--font-size-default-btn) - 2px);
      }

      @media (min-width: $desktop-screen-large) {
        padding: 0 56px;
      }
    }
  }

  .ms-footer__bottom {
    margin-top: 12px;
    display: flex;
    flex-direction: column-reverse;
    justify-content: center;
    text-align: center;

    @media (min-width: $desktop-screen) {
      flex-direction: row;
      padding-top: 40px; 
      justify-content: space-between;
      align-items: center;
    }
  }

  .ms-footer__copywrite {
    padding-top: 12px;
    border-top: 1px solid #FAAF4B;
    margin: 0;

    @media (min-width: $desktop-screen) {
      padding-top: 0;
      border-top: none;
    }
  }

  .ms-footer__drink-responsibly {
    font-size: var(--font-size-base);
    
    @media (min-width: $desktop-screen) {
      display: flex;
      column-gap: 8px;

      a {
        line-height: 0;
      }

      img {
        width: 160px;
      }
    }

    h6 {
      font-size: inherit;
      margin: 0;
      color: inherit;
    }
  }

  // Global Footer
  .footer-global {
    padding: 30px 0 45px;
    font-family: var(--font-global-family);
    letter-spacing: .06rem;

    @media (min-width: $tablet-screen) {
      padding: 90px 0 30px;
    }
  }

  .footer__logo {
    text-align: center;

    @media (min-width: $tablet-screen) {
      text-align: left;
    }
  }

  .footer__logo__shop-name {
    margin: 0;
    color: inherit;
  }

  .footer__group {
    padding-bottom: 45px;

    @media (min-width: $tablet-screen) {
      display: flex;
      padding-bottom: 120px;
      margin: 70px -15px 0;
    }

    @media (min-width: $desktop-screen-large) {
      padding-bottom: 200px;
    }
  }

  .footer__col {
    @media (min-width: $tablet-screen) {
      padding: 0 15px;
    }
  }

  .footer__col--md-1 {
    @media (min-width: $tablet-screen) {
      width: 25%;
    }
  }

  .footer__col--md-2 {
    @media (min-width: $tablet-screen) {
      width: 50%;
    }
  }

  .footer__social-newsletter {
    @media (min-width: $tablet-screen) {
      max-width: 490px;
    }
  }

  .footer__link-list {
    margin-top: 32px;

    @media (min-width: $tablet-screen) {
      margin-top: 0;
    }
  }

  .menu-links {
    text-align: center;

    @media (min-width: $tablet-screen) {
      text-align: left;
    }

    .menu-links__item {
      margin-bottom: 10px;
      display: block;

      @media (min-width: $tablet-screen) {
        margin-bottom: 15px;
      }

      &:last-child {
        margin-bottom: 0;
      }

      a {
        text-transform: uppercase;
        text-decoration: none;
        font-size: var(--font-size-navigation);
        font-family: var(--font-button-family);
        line-height: 1.2;
      }
    }
  }

  .footer__social-newsletter {
    margin-top: 90px;

    @media (min-width: $tablet-screen) {
      margin-top: 0;
    }
  }

  .footer__social {
    margin-bottom: 42px;

    @media (min-width: $tablet-screen) {
      margin-bottom: 55px;
    }
  }

