  .footer__newsletter-CTA {

  }

  .footer__newsletter-CTA__link {
    font-size: var(--font-size-default-btn);
    font-family: var(--font-button-family);
    display: flex;
    align-items: center;

    svg {
      display: inline-block;
      margin-left: 8px;
      display: block;
    }
  }

  .footer__newsletter-CTA__description {
    margin-top: 14px;
    font-size: calc(var(--font-size-small-text) - 4px);

    @media (min-width: $tablet-screen) {
      margin-top: 30px;
      font-size: var(--font-size-small-text);
    }

    p {
      &:first-child {
        margin-top: 0;
      }

      &:last-child {
        margin-bottom: 0;
      }
    }
  }

  .footer__brand-shop {
    display: flex;
    flex-direction: column;

    @media (min-width: $tablet-screen) {
      flex-direction: row;
      justify-content: space-between;
      align-items: center;
    }
  }

  .footer__brand-shop__shop-name {
    display: block;
    font-weight: 700;
    text-align: center;
    color: $color-error;
    text-transform: uppercase;
    margin-bottom: 15px;
    font-size: $font-size-small-text;

    @media (min-width: $tablet-screen) {
      text-align: right;
      margin-bottom: 0;
      order: 2;
    }
  }

  .footer__brand-list {
    padding: 0;
    display: flex;
    margin: 0;

    @media (min-width: $tablet-screen) {
      order: 1;
    }

    .footer__brand-list__item {
      height: 40px;
      padding: 2px 6px;
      display: flex;
      justify-content: center;
      align-items: center;
      border-right: 1px solid $color-grey;
      
      @media (min-width: $desktop-screen) {
        padding: 8px 16px;
      }

      &:first-child {
        border-left: 1px solid $color-grey;
      }
    }

    .footer__brand-list__item__link {
      color: transparent;

      font-size: $font-size-small-text;
      
      @media (min-width: $tablet-screen) {
        font-size: $font-size-small-text + 2;
      }
    }

    .footer__brand-list__item__image {
      position: relative;
      max-height: 22px;
      width: auto;
      vertical-align: middle;

      @media (min-width: $tablet-screen) {
        max-height: 30px;
      }

      &::after {  
        display: block;
        content: attr(alt);
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%; 
        text-align: center;
      }
    }
  }
  
  .footer__info__copyright {
    margin-top: 30px;
    font-size: $font-size-smaller-text;
    color: var(--grey);

    @media (min-width: $tablet-screen) {
      font-size: $font-size-small-text;
    }
  }

  .footer__payment-method {
    display: flex;
    margin-top: 15px;
    flex-direction: column;
    align-items: center;
    color: var(--grey);

    @media (min-width: $tablet-screen) {
      margin-top: 30px;
      flex-direction: row;
    }

    .footer__payment-method__label {
      display: inline-block;
      font-size: $font-size-smaller-text;
      text-transform: uppercase;
      margin: 0 0 15px;

      @media (min-width: $tablet-screen) {
        font-size: $font-size-small-text;
        margin: 0 15px 0 0;
      }
    }

    .footer__payment-method__list {
      padding: 0;
      margin: 0;
      display: flex;

      li {
        margin-right: 10px;
        line-height: 1;

        &:last-child {
          margin-right: 0;
        }
      }
    }
  }

  .footer__menu-bottom {
    padding: 0;
    display: flex;
    flex-wrap: wrap;
    justify-content: center; 
    margin-top: 20px;

    @media (min-width: $tablet-screen) {
      justify-content: flex-start;
      margin-top: 28px;
    }

    .footer__menu-bottom__item {
      padding: 0 10px;
      border-right: 1px solid var(--grey);
      margin-top: 10px;
      letter-spacing: .05rem;
      color: var(--border);

      @media (min-width: $tablet-screen) {
        padding: 0 16px;
      }

      &:first-child {
        padding-left: 0;
      }

      &:last-child {
        padding-right: 0;
        border: none;
      }

      a {
        font-size: calc(var(--global-text-fs) - 8px);
        text-decoration: none;
        text-transform: uppercase;

        @media (min-width: $tablet-screen) {
          font-size: $font-size-smaller-text;
        }
      }
    }
  }

  .block-label {
    font-size: var(--font-size-subtitle);
    text-transform: uppercase; 
    margin: 0 0 15px;
  }

  .error-mess,
  .success-mess {
    display: none;
    margin-top: 10px;
    font-size: $font-size-smaller-text;

    @media (min-width: $tablet-screen) {
      font-size: $font-size-small-text;
    }

    &.active {
      display: block;
    }
  }

  .error-mess {
    color: $color-error;
  }
}

.result-mess {
  display: none;
  margin-top: 20px;
  text-align: center;

  &.active {
    display: block;
  }
}

