$color-monkey-beige: {{ settings.monkey_beige }};

$font-weight-bold: bold;
$font-weight-500: 500;
$font-size-20: 20px;

$mobile-tablet: 768px;

.audio {
  background-color: $color-monkey-beige;
}

.audio__wrap {
  display: flex;
  flex-direction: column-reverse;
  justify-content: center;
  align-items: center;

  @media (min-width: 1024px) {
    flex-direction: row;
    align-items: flex-start;
  }
  
  .audio__content {
    width: 100%;
    margin: 12rem 0 83px;
    text-align: center;
    
    @media (min-width: 1024px) {
      margin: 40px 20px 40px 0;
      width: 36%;
      text-align: left;
    }

    @media (min-width: 1200px) {
      margin: 40px 90px 40px 0;
      width: 30%;
      text-align: left;
    }

    .audio__content__title {
      margin: 0;
      text-transform: uppercase;
      font-weight: $font-weight-bold;
    }

    .audio__content__subtitle {
      font-weight: $font-weight-500;
      margin-bottom: 2rem;
      font-size: var(--font-size-base);
      
      @media (min-width: $mobile-tablet) {
        font-size: $font-size-20;
      }
    }

    .audio__content__btn-play-audio {
      display: inline-flex;
      justify-content: center;
      align-items: center;
    }
  }
}

.audio__iframe {
  width: 100%;
  height: 100%;
  position: relative;

  @media (min-width: 1024px) {
    width: 60%;
  }

  @media (min-width: 1200px) {
    width: 65%;
  }
  
  .audio__iframe__content {
    position: relative;
    box-sizing: border-box;
    width: 100%;
    height: 0;
    padding-bottom: 63%;
    
    @media (min-width: 1024px) {
      padding-bottom: 100%;
    }

    @media (min-width: 1200px) {
      padding-bottom: 63%;
    }

    &.audio__iframe__content--relative {
      padding-bottom: calc(100% + 12px);

      @media (min-width: 375px) {
        padding-bottom: 100%;
      }
    }

    .iframe {
      display: block;
      position: absolute;
      top: 56px;
      left: 0;
      height: calc(100% + 92px);
      width: 100%;

      @media (min-width: 1024px) {
        top: -46px;
      }

      &.iframe--block {
        top: 0;
        height: 100%;
      }
    }

    .audio__iframe__content__loading {
      display: none;
      position: absolute;
      top: 56px;
      left: 0;
      width: 100%;
      height: calc(100% + 92px);
      background-color: rgba(0, 0, 0, .6);

      @media (min-width: 1024px) {
        top: -46px;
      }
      
      &.show {
        display: flex;
        align-items: center;
        justify-content: center;
      }
    }
  }
}

.iframe__title {
  color: var(--white);
}

// loading 
.loading-wrap {
  display: inline-block;
  position: relative;
  width: 80px;
  height: 80px;

  div {
    box-sizing: border-box;
    display: block;
    position: absolute;
    width: 64px;
    height: 64px;
    margin: 8px;
    border: 8px solid #fff;
    border-radius: 50%;
    animation: loading 1.2s cubic-bezier(0.5, 0, 0.5, 1) infinite;
    border-color: #fff transparent transparent transparent;

    &:nth-child(1) {
      animation-delay: -0.45s;
    }

    &:nth-child(2) {
      animation-delay: -0.3s;
    }

    &:nth-child(3) {
      animation-delay: -0.15s;
    }
  }
}

/* Safari */
@-webkit-keyframes loading {
  0% {
    transform: rotate(0deg);
  }
  100% {
    transform: rotate(360deg);
  }
}

@keyframes loading {
  0% {
    transform: rotate(0deg);
  }
  100% {
    transform: rotate(360deg);
  }
}