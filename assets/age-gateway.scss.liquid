$tablet-screen: 768px;
$desktop-screen: 1200px;
$desktop-screen-large: 1440px;

$font-size-smaller-text: calc(var(--global-text-fs) - 6px);
$font-size-small-text: calc(var(--global-text-fs) - 2px);
$font-size-base: var(--global-text-fs);

.section-age-gateway {
  display: none;

  &.show {
    display: block;
  }
}

.age-gateway {
  position: fixed;
  top: 0;
  left: 0;
  width: 100vw;
  height: 100vh;
  z-index: 6;
  background: #1A1825;
  color: var(--white);
  font-family: var(--font-global-family);
  padding: 20px 10px;

  @media (min-width: $desktop-screen) {
    padding: 30px 20px;
  }

  .age-gateway__wrap {
    width: 100%;
    height: 100%;
    overflow-y: auto;

    &::-webkit-scrollbar-track {
      -webkit-box-shadow: inset 0 0 6px rgba(0, 0, 0, 0.05);
      background-color: #9F9F9F;
    }
  
    &::-webkit-scrollbar {
      width: 2px;
      background-color: #ECECEC;
    }
  
    &::-webkit-scrollbar-thumb {
      background-color: #ECECEC;
    }
  }

  .age-gateway-form {
    min-height: 100%;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    text-align: center;
    padding: 0 10px;

    @media (min-width: $desktop-screen) {
      padding: 0 10%;
    }

    @media (min-width: $desktop-screen-large) {
      padding: 0 25%;
    }

    .age-gateway-form__logo {
      max-width: 220px;
      margin-bottom: 43px;

      @media (min-width: $tablet-screen) {
        max-width: 330px;
      }
    }

    .age-gateway-form__brands__list {
      text-align: left;
      display: flex;
      flex-direction: column;
      row-gap: 26px;
      margin-bottom: 43px;

      @media (min-width: $tablet-screen) {
        flex-direction: row;
        row-gap: 0;
        column-gap: 30px;
      }

      .form-radio {
        align-items: center;

        .radio-label {
          line-height: 0;
          text-transform: uppercase;

          img {
            max-height: 20px;
          }
        }
      }
    }

    .age-gateway-form__birthday {
      margin-bottom: 25px;

      @media (min-width: $tablet-screen) {
        margin-bottom: 45px;
      }

      .age-gateway-form__birthday__label {
        font-size: $font-size-smaller-text;
        margin: 0 0 15px;
      }

      .age-gateway-form__birthday__inputs {
        input {
          margin-right: 6px;

          &:last-child {
            margin-right: 0;
          }
        }
      }
    }

    .age-gateway-form__checkbox {
      margin-bottom: 15px;

      @media (min-width: $tablet-screen) {
        margin-bottom: 45px;
      }

      .form-checkbox {
        display: flex;

        input[type="checkbox"] {
          width: 18px;
          margin: 0;
          color: var(--white);

          &:before {
            background-color: var(--white);
          }

          &:checked {
            background-color: var(--white);
          }
        }

        label {
          width: calc(100% - 18px);
          display: inline-block;
          padding-left: 10px;
          font-size: $font-size-smaller-text;
          text-align: left;

          @media (min-width: $tablet-screen) {
            font-size: $font-size-small-text;
          }
        }
      }
    }

    .age-gateway-form__button {
      margin-bottom: 15px;
      font-family: var(--font-global-family);
      cursor: pointer;

      @media (min-width: $tablet-screen) {
        margin-bottom: 30px;
      }
    }

    .age-gateway-form__term-condition {
      font-size: $font-size-small-text;

      @media (min-width: $tablet-screen) {
        font-size: $font-size-base;
      }

      a {
        font-size: inherit;
        font-weight: bold;
      }

      p {
        margin-bottom: 0;

        &:last-child {
          margin-top: 0;
        }
      }
    }
  }

  a,
  button {
    color: inherit;
  }

  .age-gate-error {
    color: #D45757;
    font-size: $font-size-small-text;
    margin: 15px 0 0;
    display: none;

    @media (min-width: $tablet-screen) {
      font-size: $font-size-base;
      margin: 30px 0 -15px;
    }

    &.active {
      display: block;
    }

    &#age-gate-error--brands {
      margin: 0 0 20px;
    }
  }
}

.stop-scrolling {
  overflow: hidden;

  body {
    overflow: hidden;
  }
}