.ms-video {
  .ms-video__wrap {
    @media (max-width: 767px) {
      padding: 0;
    }
  }

  .ms-video__item {
    position: relative;
    width: 100%;
    overflow: hidden;
    height: 0;
    padding-top: 100%;
    
    @media (min-width: 768px) {
      padding-top: calc(590 / 1050 * 100%);
    }
  }
  
  .ms-video__item iframe {
    position: absolute;
    top: 0;
    left: 0;
    bottom: 0;
    right: 0;
    width: 100%;
    height: 100%;
    border: none;
  }
}