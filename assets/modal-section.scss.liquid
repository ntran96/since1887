$tablet-screen: 768px;

.modal-section {
  font-family: var(--font-global-family);
  letter-spacing: .03em;
  text-align: center;
  display: none;
  position: fixed;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  z-index: 1000;
  overflow: hidden;
  outline: 0;
  background-color: rgba(0, 0, 0, .5);

  .modal-section-overlay {
    display: block;
    position: relative;
    margin: 0 auto;
    pointer-events: none;
    width: calc(100vw - 40px);
    max-width: 725px;
    top: 50vh;
    transform: translateY(-50%);
  }

  .modal__content {
    position: relative;
    display: flex;
    flex-direction: column;
    width: 100%;
    pointer-events: auto;
    background-color: var(--white);
    outline: 0;
  }

  .modal-inner {
    padding: 69px 20px 60px;
    max-height: 80vh;
    overflow: auto;

    @media (min-width: $tablet-screen) {
      padding: 84px 75px 90px;
    }
  }

  .modal-section__heading {
    font-family: var(--font-global-family);
    line-height: calc(1 + 0.33 / var(--font-body-scale));
    font-size: var(--global-heading-fs);
    text-transform: uppercase;
    margin: 0 0 10px;

    @media (min-width: $tablet-screen) {
      margin-bottom: 15px;
    }
  }

  .modal-section__message {
    font-size: var(--global-text-fs);
    line-height: calc(1 + 0.5 / var(--font-body-scale));
    margin: 0 0 30px;

    @media (min-width: $tablet-screen) {
      margin: 0 40px 60px;
    }
  }

  .modal__close-button {
    display: flex;
    justify-content: center;
    align-items: center;
    position: absolute;
    top: 15px;
    right: 15px;
    background: none;
    border: none;
    padding: 0;
    cursor: pointer;
    margin: 0;

    svg {
      width: 24px;
      height: 24px;
    }
  }

  .buttons-wrapper {
    display: flex;
    align-items: center;
    justify-content: center;
    flex-direction: column;

    @media (min-width: $tablet-screen) {
      flex-direction: row;
    }
  }

  .btn {
    @media (min-width: $tablet-screen) {
      margin: 0 7.5px;
    }
  }

  .btn+.btn {
    margin-top: 15px;

    @media (min-width: $tablet-screen) {
      margin-top: 0;
    }
  }
}

.modal-section[open] {
  display: block;
}