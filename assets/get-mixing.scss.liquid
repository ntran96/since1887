.get-mixing {
  .get-mixing__logo {
    margin-bottom: 25px;

    @media screen and (min-width: 1200px) {
      margin-bottom: 42px;
    }

    img {
      max-width: 140px;

      @media screen and (min-width: 1200px) {
        max-width: 280px;
      }
    }
  }

  .get-mixing__heading {
    margin-bottom: 56px;

    @media screen and (min-width: 1200px) {
      margin-bottom: 110px;
    }
  }

  .get-mixing__heading__title {
    margin: 0;
  }

  .get-mixing__heading__desc {
    max-width: 800px;
    margin: 24px auto 0;

    @media screen and (min-width: 1200px) {
      margin: 40px auto 0;
    }
  }

  .get-mixing__slide__wrap {
    padding-bottom: 30px;
    padding-left: 20px;

    @media screen and (min-width: 990px) {
      padding-left: 42px;
    }

    @media screen and (min-width: 1200px) {
      padding-bottom: 90px;
    }

    @media screen and (min-width: 1440px) {
      padding-left: calc((100vw - 17px - var(--page-width)) / 2 + 42px);
    }

    @media screen and (min-width: 1920px) {
      padding-left: calc((100vw - 17px - var(--page-width-large)) / 2 + 42px);
    }
  }

  .get-mixing-item {
    position: relative;
  }

  .get-mixing-item__image {
    position: relative;
    box-sizing: border-box;
    width: 100%;
    height: 0;
    padding-bottom: 100%;

    &::before {
      content: '';
      position: absolute;
      top: 0;
      left: 0;
      height: 100%;
      width: 100%;
      z-index: 1;
      background: #000000;
      opacity: 0;
    }

    img {
      display: block;
      position: absolute;
      top: 0;
      left: 0;
      height: 100%;
      width: 100%;
      object-fit: cover;
    }
  }

  .get-mixing-item__name {
    position: absolute;
    left: 22px;
    bottom: 20px;
    color: {{ settings.monkey_off_white }};
    margin: 0;
  }

  .get-mixing__button {
    display: flex;
    justify-content: center;
    margin-top: 24px;
    
    @media (min-width: 768px) {
      margin-top: 60px;
    }
  }

