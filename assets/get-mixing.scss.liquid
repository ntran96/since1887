  .swiper-custom-pagination {
    text-align: center;
    position: absolute;
    left: 0;
    bottom: 0;
    width: 100%;
    line-height: 0;
  }
  
  .swiper-pagination-bullet {
    background: rgba(30, 26, 51, 0.3);
    width: 30px;
    height: 3px;
    border-radius: 0;
    margin: 0 !important;
  
    @media screen and (min-width: 1200px) {
      width: 120px;
    }
  }
  
  .swiper-pagination-bullet-active {
    background: {{ settings.monkey_red }};
  }
}