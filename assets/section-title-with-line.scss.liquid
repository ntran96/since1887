.title-with-line__wrap {
  padding: 0 20px;

  @media screen and (min-width: 1024px) {
    display: flex;
    justify-content: space-between;
  }
}

.title-with-line__text {
  @media screen and (min-width: 1024px) {
    width: 50%;
    padding-right: 30px;
  }
}

.title-with-line__line {
  height: 5px;
  margin-top: 10px;

  @media screen and (min-width: 1024px) {
    height: 10px;
    margin-top: 0px;
    width: 50%;
  }

  &:empty {
    display: block;
  }
}

.title-alignment--left {
  @media screen and (min-width: 990px) {
    padding: 0 0 0 42px;
  }
  
  @media screen and (min-width: 1400px) {
    padding: 0 0 0 calc((100vw - 17px - var(--page-width)) / 2 + 42px);
  }

  @media screen and (min-width: 1920px) {
    padding: 0 0 0 calc((100vw - 17px - var(--page-width-large)) / 2 + 42px);
  }
}

.title-alignment--right {
  @media screen and (min-width: 990px) {
    padding: 0 42px 0 0;
  }

  @media screen and (min-width: 1024px) {
    flex-direction: row-reverse;
  }

  @media screen and (min-width: 1400px) {
    padding: 0 calc((100vw - 17px - var(--page-width)) / 2 + 42px) 0 0;
  }

  @media screen and (min-width: 1920px) {
    padding: 0 calc((100vw - 17px - var(--page-width-large)) / 2 + 42px) 0 0;
  }

  .title-with-line__text {
    @media screen and (min-width: 1024px) {
      padding: 0 0 30px;
      text-align: right;
    }
  }
}