{{ 'ms-newsletter-section.scss.css' | asset_url | stylesheet_tag }}

{%- style -%}

.ms-newsletter {
  background-color: {{ section.settings.background_color }};
  background-image: url({{ section.settings.background_pattern | img_url : '2048x2048' }});
}

.ms-newsletter__box:before {
  background-image: url({{ section.settings.hand_graphic_bottom | img_url : 'large' }});
}

.ms-newsletter__box:after {
  background-image: url({{ section.settings.hand_graphic_top | img_url : 'large' }});
}

@media screen and (min-width: 768px) {
  .ms-newsletter__box:before {
    background-image: url({{ section.settings.hand_graphic_left | img_url : 'large' }});
  }
  
  .ms-newsletter__box:after {
    background-image: url({{ section.settings.hand_graphic_right | img_url : 'large' }});
  }
}
{%- endstyle -%}

<section class="ms-newsletter">
   <div class="ms-newsletter__wrap">
    <div class="ms-newsletter__box center">
      <h2 class="ms-newsletter__title uppercase">{{ section.settings.title }}</h2>
      <div class="ms-newsletter__desc rich-text-wrap">{{ section.settings.description }}</div>
      <a class="ms-newsletter__button ms-button" href="{{ section.settings.button_url }}">{{ section.settings.button_label }}</a>
    </div>
   </div>
</section>

